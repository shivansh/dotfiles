[user]
	name = Shivansh Rai
	email = shivansh@freebsd.org

[core]
	editor = nvim
	excludesfile = ~/.gitignore_global

[diff]
	tool = vimdiff
	compactionHeuristic = true

[difftool]
	prompt = false

[alias]
	d = difftool

[commit]
	gpgsign = true

[url "git@github.com:"]
  insteadOf = https://github.com/
  insteadOf = http://github.com/

[gc]
	auto = 1
