# Placement settings
alignment top_right
gap_x 10
gap_y 10
minimum_size 400 850
maximum_width 800

# Background settings
background yes

# Execution settings
update_interval 2
update_interval_on_battery 4
total_run_times 0

# Buffer settings
double_buffer yes
no_buffers yes
text_buffer_size 1248

# Sample settings
cpu_avg_samples 2

# Font settings
use_xft yes
override_utf8_locale yes

# Window settings
own_window yes
own_window_type normal
own_window_transparent yes
own_window_argb_visual yes 
own_window_argb_value 0
own_window_hints below, undecorated, sticky, skip_taskbar, skip_pager

# Draw settings
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

# Load LUA
lua_load ~/.lua.lua
lua_draw_hook_pre ring_stats

