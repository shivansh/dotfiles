#!/usr/bin/env bash

export NODE_PATH=/usr/local/lib/jsctags/:$NODE_PATH
export GOPATH=$HOME/sourceCodes/personalProjects/goProjects
export PATH=$PATH:/usr/local/go/bin:$GOPATH/bin

export TERM="xterm-256color"

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

# Some programs use VISUAL instead of EDITOR
export VISUAL=nvim
export EDITOR="$VISUAL"

# Allow 32Â³ history entries.
export HISTSIZE=32768
export HISTFILESIZE="${HISTSIZE}"
# Omit duplicates and commands that begin with a space from history.
export HISTCONTROL=ignoreboth
export LESS="$LESS --ignore-case -FRX"

# Compilation flags
# export ARCHFLAGS="-arch x86_64"

# ssh
export SSH_KEY_PATH="~/.ssh/id_rsa.pub"

# Avoid issues with `gpg`: https://stackoverflow.com/a/42265848/96656
export GPG_TTY=$(tty)

# Path to local oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh
